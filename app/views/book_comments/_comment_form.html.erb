<!--from books/show.html book:@book-->

      
      <!--コメントの投稿-->
      <div class="comments">
        <table>
          <% book_comments.each do |book_comment| %>
            <tr>
              <!--image_tagは書評の投稿者(book)ではなく、コメントの投稿者にする。引数はbook_comment.user-->
              <td>
                <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
              </td>
              <td><%= book_comment.user.name %></td>
              <td><%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %></td>
            <% if book_comment.user == current_user %>
              <td>
                <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %>
              </td>
            <% end %>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>